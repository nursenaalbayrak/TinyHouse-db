@model IEnumerable<Veritabanı_proje.Models.User>

<div class="container mt-4">
    <h2>Kullanıcı Yönetimi</h2>
    <form asp-action="Users" method="get" class="form-inline mb-3">
        <input type="text" name="searchString" class="form-control mr-2" placeholder="Kullanıcı ara...">
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 