@model TinyHouse
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            
            <div class="row mt-4">
                <div class="col-md-8">
                    <h4>Ev Detayları</h4>
                    <p class="card-text">@Model.Description</p>
                    
                    <ul class="list-group mt-3">
                        <li class="list-group-item">
                            <strong>Fiyat:</strong> ₺@Model.Price/gece
                        </li>
                        <li class="list-group-item">
                            <strong>Konum:</strong> @Model.Location
                        </li>
                        <li class="list-group-item">
                            <strong>Alan:</strong> @Model.SquareMeters m²
                        </li>
                        @if (Model?.Owner != null)
                        {
                            <li class="list-group-item">
                                <strong>Ev Sahibi:</strong> @Model.Owner.FirstName @Model.Owner.LastName
                            </li>
                        }
                    </ul>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h4>Rezervasyon Yap</h4>
                            <form asp-action="MakeReservation" method="post">
                                <input type="hidden" name="houseId" value="@Model.Id" />
                                
                                <div class="form-group mb-3">
                                    <label>Giriş Tarihi</label>
                                    <input type="date" name="startDate" class="form-control" required 
                                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label>Çıkış Tarihi</label>
                                    <input type="date" name="endDate" class="form-control" required 
                                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    Rezervasyon Yap
                                </button>
                            </form>

                            <form asp-action="CreateTestReservation" method="post" class="mt-2">
                                <input type="hidden" name="houseId" value="@Model.Id" />
                                <button type="submit" class="btn btn-warning w-100">
                                    Test Rezervasyonu Oluştur
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="mt-4">
                    <h4>Yorumlar</h4>
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <strong>@review.User.FirstName @review.User.LastName</strong>
                                <span>Puan: @review.Rating</span>
                                <p>@review.Comment</p>
                                <small>@review.CreatedAt.ToShortDateString()</small>
                            </div>
                        </div>
                    }
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Photos))
            {
                var photos = System.Text.Json.JsonSerializer.Deserialize<List<string>>(Model.Photos);
                if (photos != null && photos.Any())
                {
                    <img src="@photos[0]" ... />
                }
            }
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
} 